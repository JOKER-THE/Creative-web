{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <div class="alert alert-info">
            <p>Current Date & Time: <span id="time">{{ date }}</span></p>
            <p>Current Controller: {{ controller }}</p>
            <p>Current Method: {{ method }}</p>
        </div>
        <div class="row">
            {% for trailer in trailers %}
                <div class="col-md-3">
                    <div class="card m-1">
                        <img class="card-img-top" src="{{ trailer.image }}" alt="Poster">
                        <div class="card-body">
                            <p class="card-title"><a href="/trailer/{{ trailer.id }}">{{ trailer.title }}</a></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
